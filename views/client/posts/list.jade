extends ../layout
block customjs
	script(src="#{baseUrl}/javascripts/jquery/pages/post.js")
block content
	.container
		h2 Post List
	hr
	.container
		.row
			.col-sm-3.col-md-2
				include ../sidebar
			.col-sm-9.col-md-10
				- var posts_list = JSON.parse(posts);
				- for post in posts_list
						.media(id="#{post.ID}")
							.media-left
								a(href='#')
									img(class="media-object", data-src="holder.js/64x64", alt="64x64", src="data:image/svg+xml;base64,", data-holder-rendered="true", style="width: 64px; height: 64px;")
							.media-body
								h4.media-heading !{post.post_title}
									a(href="http://localhost:3001/posts/del/#{post.ID}", target="_blank") delete
								p !{post.post_content.substr(1, 250)}									
				- else
					p Post not found							
