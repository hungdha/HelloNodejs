extends ../layout
block content
    .container
        h2 Sign Up
    hr
    .container
        form.form-horizontal(action='/user/register', method='POST',  name="userForm")
            div.form-group
                label.col-sm-2.control-label(for='username') Username:
                .col-sm-10
                    input#username.form-control(type='text', placeholder='Username', name="username")                     
            div.form-group
                label.col-sm-2.control-label(for='email') Email:
                .col-sm-10
                    input#email.form-control(type='text', placeholder='Email', name="email" ) 

            div.form-group
                label.col-sm-2.control-label(for='password') Password:
                .col-sm-10
                    input#password.form-control(type='password', placeholder='Password', name="password"  )                      
            div.form-group
                label.col-sm-2.control-label(for='password') Re-Password:
                .col-sm-10
                    input#re-password.form-control(type='password', placeholder='Re Password', name="re-password"  )            
            div.form-group
                .col-sm-offset-2.col-sm-10
                    button.btn.btn-primary(type='submit', ) Register        
