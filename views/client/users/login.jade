extends ../layout
block customjs
    link( rel='stylesheet', href='#{baseUrl}/stylesheets/client/login.css')
block content    
    .container
        h2 Sign In
        - if(messageAccess)
            p.bg-danger(style="padding:15px") #{messageAccess}
        - if(messageError)
            p.bg-danger(style="padding:15px") #{messageError}
    hr
    .container
        form.form-horizontal.user-form-login(action='#{baseUrl}/user/login', method='POST', name="userForm" )
            div.form-group
                label.col-sm-2.control-label(for='username') Username:
                .col-sm-10
                    input#username.form-control(type='text', placeholder='Username', name="username" , value="nodejs")                     
            div.form-group
                label.col-sm-2.control-label(for='password') Password:
                .col-sm-10
                    input#password.form-control(type='password', placeholder='password', name="password", value="123456")                                          
            div.form-group
                .col-sm-offset-2.col-sm-10
                    button.btn.btn-primary(type='submit') Login
                    - if(returnUrl)
                        input(type="hidden", value="#{returnUrl}", name="return_url")        
