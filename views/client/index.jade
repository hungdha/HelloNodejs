    hr
    .container(ng-controller="ContactController")
        .row            
            .col-md-6
                form.form-horizontal(action='', method='POST',  name="contactForm", ng-model="contactForm" )
                    // hien thi cac loi tai day.                                 
                    ul(style = "color:red", ng-show="isShow", ng-class="msgClass" )
                        li(ng-repeat="msg in msgs") {{msg}} 
                    div.form-group(ng-class="classForName")
                        label.col-sm-2.control-label(for='name') Name:
                            span.warning-start (*)
                        .col-sm-10
                            input#name.form-control(type='text', placeholder='Name', name="name", ng-model="name", ng-change="onChanged()" )                     

                    div.form-group(ng-class="classForEmail")
                        label.col-sm-2.control-label(for='email') Email:
                            span.warning-start (*)
                        .col-sm-10
                            input#email.form-control(type='text', placeholder='Email', name="email", ng-model="email",  ng-change="onChanged()" )                                                  
                    div.form-group(ng-class="classForPhone")
                        label.col-sm-2.control-label(for='phone') Phone:
