// Layout Administrator
- var baseUrl = URLs.baseUrl;
doctype html
html
	head
		title 
			| #{title}
		link( href="#{baseUrl}/stylesheets/bootstrap.min.css", rel="stylesheet" )        
		link( href="#{baseUrl}/stylesheets/style.css", rel="stylesheet" )
		link( href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel='stylesheet', type='text/css')
		//link( href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel='stylesheet' )
		link( href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css", rel="stylesheet" type="text/css")
		link( href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic', rel='stylesheet', type='text/css')
		link( href='#{baseUrl}/stylesheets/admin/dashboard.css', rel='stylesheet' )
	body
		div.page-wrapper        
			nav.navbar.navbar-inverse.navbar-fixed-top
				.container-fluid
					// Brand and toggle get grouped for better mobile display
					.navbar-header
						button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href='/')
							b Hello Nodejs
					// Collect the nav links, forms, and other content for toggling
					#bs-example-navbar-collapse-1.collapse.navbar-collapse
						ul.nav.navbar-nav
							li.active
								a(href='/')
									| CPanel
									span.sr-only (current)
							li
								a(href='/about') Categories
							li.dropdown
								a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
									| Posts
									span.caret
								ul.dropdown-menu
									li
										a(href='#{baseUrl}/admin/posts/entry') Add New Post
									li
										a(href='#{baseUrl}/admin/posts') View List 									
							li
								a(href='/users') Users                                                                   
						ul.nav.navbar-nav.navbar-right                            
							li                                                         
								a Hello,Admin
							li.dropdown
								a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
									| Pages Manager
									span.caret
								ul.dropdown-menu                                   
									li
										a(href='/admin/contacts') Manager Contacts
									li
										a(href='/admin/users') Manager Users                                    
									li
										a(href='/admin/posts') Manager Posts
									li.divider(role='separator')
									li
										a(href='#') Manager Tasks                                
							li.dropdown
								a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
									| Profile
									span.caret
								ul.dropdown-menu
									li
										a(href='#{baseUrl}/user/changepassword') Change password
									li
										a(href='#{baseUrl}/user/edit') Edit profile
									li
										a(href='#') Settings
									li.divider(role='separator')                                        
									li                                        
										a(href='#{baseUrl}/user/logout') Logout                            	
			.container-fluid
				h2 Title
			.container-fluid
				.row
					.col-md-2.col-sm-3.sidebar
						include sidebar
					.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
						block content               			
		block javascript
			script(src="#{baseUrl}/javascripts/jquery/jquery.min.js")
			script(src="#{baseUrl}/javascripts/bootstrap/bootstrap.min.js")
			script(src="#{baseUrl}/javascripts/angular/angular.js")
			script(src="#{baseUrl}/javascripts/angular/main.js")
			block customjs    
