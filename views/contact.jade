extends layout
block content
    div.page-wrapper
        nav.navbar.navbar-inverse.navbar-fixed-top
            .container
                // Brand and toggle get grouped for better mobile display
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#')
                        b Hello Nodejs
                // Collect the nav links, forms, and other content for toggling
                #bs-example-navbar-collapse-1.collapse.navbar-collapse
                    ul.nav.navbar-nav
                        li.active
                            a(href='/')
                                | Home
                                span.sr-only (current)
                        li
                            a(href='/about') About
                        li
                            a(href='/contact') Contact
                        li.dropdown
                            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                | Dropdown
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href='#') Action
                                li
                                    a(href='#') Another action
                                li
                                    a(href='#') Something else here
                                li.divider(role='separator')
                                li
                                    a(href='#') Separated link
                                li.divider(role='separator')
                                li
                                    a(href='#') One more separated link
                    form.navbar-form.navbar-left(role='search')
                        .form-group
                            input.form-control(type='text', placeholder='Search')
                    ul.nav.navbar-nav.navbar-right
                        li
                            button.btn.btn-default.navbar-btn(href='#', type='button') Sign In
                        li.dropdown
                            a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                                | Dropdown
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href='#') Action
                                li
                                    a(href='#') Another action
                                li
                                    a(href='#') Something else here
                                li.divider(role='separator')
                                li
                                    a(href='#') Separated link
        .container
            form.form-horizontal(action='/contact', method='POST')
                .form-group
                    label.col-sm-2.control-label(for='name') Name
                    .col-sm-10
                        input#name.form-control(type='text', placeholder='Name', name="name", value=body.name )
                .form-group
                    label.col-sm-2.control-label(for='email') Email
                    .col-sm-10
                        input#email.form-control(type='text', placeholder='Email', name="email" value=body.email  )
                .form-group
                    label.col-sm-2.control-label(for='phone') Phone
                    .col-sm-10
                        input#phone.form-control(type='text', placeholder='Phone', name="phone" value=body.phone )
                .form-group
                    label.col-sm-2.control-label(for='address') Address
                    .col-sm-10
                        input#address.form-control(type='text', placeholder='Adress', name="address" value=body.address )
                .form-group
                    label.col-sm-2.control-label(for='message') Content
                    .col-sm-10
                        textarea#message.form-control(placeholder='Message',rows= 10, name="message")=body.message
                .form-group
                    .col-sm-offset-2.col-sm-10
                        button.btn.btn-primary(type='submit') Send a contact
